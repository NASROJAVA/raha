      <ul class="menu menu-horizontal px-2 rtl gap-1">
        <li><a href="/" class="px-4 py-2 rounded-xl <%= path === '/' ? 'bg-primary/10 text-primary font-medium' : '' %> transition-all duration-200 hover:bg-primary/10">الرئيسية</a></li>
        <% if (!user || user.role !== 'psychologist') { %>
          <li><a href="/survey" class="px-4 py-2 rounded-xl <%= path.startsWith('/survey') ? 'bg-primary/10 text-primary font-medium' : '' %> transition-all duration-200 hover:bg-primary/10">استبيان الضغط</a></li>
          <li><a href="/support" class="px-4 py-2 rounded-xl <%= path.startsWith('/support') ? 'bg-primary/10 text-primary font-medium' : '' %> transition-all duration-200 hover:bg-primary/10">الدعم النفسي</a></li>
          <li><a href="/sessions" class="px-4 py-2 rounded-xl <%= path.startsWith('/sessions') ? 'bg-primary/10 text-primary font-medium' : '' %> transition-all duration-200 hover:bg-primary/10">الجلسات</a></li>
        <% } %>
        
        <% if (user) { %>
          <% if (user.role === 'employee') { %>
            <li class="dropdown dropdown-hover dropdown-end">
              <div tabindex="0" class="px-4 py-2 rounded-xl hover:bg-primary/10 flex items-center space-x-1 space-x-reverse transition-all duration-200">
                <span>المزيد</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </div>
              <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow-lg bg-base-100 rounded-xl w-52 mt-2">
                <li><a href="/dashboard" class="<%= path === '/dashboard' ? 'bg-primary/10 text-primary font-medium' : '' %> transition-all duration-200 rounded-lg hover:bg-primary/10">لوحة التحكم</a></li>
                <li><a href="/training" class="<%= path.startsWith('/training') ? 'bg-primary/10 text-primary font-medium' : '' %> transition-all duration-200 rounded-lg hover:bg-primary/10">المواد التدريبية</a></li>
                <li><a href="/community" class="<%= path.startsWith('/community') ? 'bg-primary/10 text-primary font-medium' : '' %> transition-all duration-200 rounded-lg hover:bg-primary/10">المجتمع</a></li>
                <li><a href="/survey/history" class="<%= path === '/survey/history' ? 'bg-primary/10 text-primary font-medium' : '' %> transition-all duration-200 rounded-lg hover:bg-primary/10">سجل الاستبيانات</a></li>
              </ul>
            </li>
          <% } else if (user.role === 'psychologist') { %>
            <!-- Dashboard link -->
            <li>
              <a href="/psychologist/dashboard" class="<%= path === '/psychologist/dashboard' ? 'bg-primary/10 text-primary font-medium' : '' %> px-4 py-2 rounded-xl hover:bg-primary/10 transition-all duration-200">لوحة التحكم</a>
            </li>
            
            <!-- Messages link -->
            <li>
              <a href="/psychologist/messages" class="<%= path.startsWith('/psychologist/messages') ? 'bg-primary/10 text-primary font-medium' : '' %> px-4 py-2 rounded-xl hover:bg-primary/10 transition-all duration-200">الرسائل</a>
            </li>
            
            <!-- Sessions link -->
            <li>
              <a href="/psychologist/sessions" class="<%= path.startsWith('/psychologist/sessions') ? 'bg-primary/10 text-primary font-medium' : '' %> px-4 py-2 rounded-xl hover:bg-primary/10 transition-all duration-200">الجلسات</a>
            </li>
            
            <!-- Dropdown menu for other pages -->
            <li class="dropdown dropdown-hover dropdown-end">
              <div tabindex="0" class="px-4 py-2 rounded-xl hover:bg-primary/10 flex items-center space-x-1 space-x-reverse transition-all duration-200">
                <span>المزيد</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </div>
              <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow-lg bg-base-100 rounded-xl w-52 mt-2">
                <li><a href="/psychologist/statistics" class="<%= path.startsWith('/psychologist/statistics') ? 'bg-primary/10 text-primary font-medium' : '' %> transition-all duration-200 rounded-lg hover:bg-primary/10">الإحصائيات</a></li>
                <li><a href="/psychologist/availability" class="<%= path.startsWith('/psychologist/availability') ? 'bg-primary/10 text-primary font-medium' : '' %> transition-all duration-200 rounded-lg hover:bg-primary/10">الجدول والمواعيد</a></li>
                <li><a href="/psychologist/feedback" class="<%= path.startsWith('/psychologist/feedback') ? 'bg-primary/10 text-primary font-medium' : '' %> transition-all duration-200 rounded-lg hover:bg-primary/10">التقييمات</a></li>
                <li><a href="/psychologist/profile" class="<%= path.startsWith('/psychologist/profile') ? 'bg-primary/10 text-primary font-medium' : '' %> transition-all duration-200 rounded-lg hover:bg-primary/10">الملف الشخصي</a></li>
              </ul>
            </li>
          <% } else if (user.role === 'admin') { %>
            <li class="dropdown dropdown-hover dropdown-end">
              <div tabindex="0" class="px-4 py-2 rounded-xl hover:bg-primary/10 flex items-center space-x-1 space-x-reverse transition-all duration-200">
                <span>لوحة التحكم</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </div>
              <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow-lg bg-base-100 rounded-xl w-52 mt-2">
                <li><a href="/admin/dashboard" class="<%= path === '/admin/dashboard' ? 'bg-primary/10 text-primary font-medium' : '' %> transition-all duration-200 rounded-lg hover:bg-primary/10">لوحة التحكم</a></li>
                <li><a href="/admin/users" class="<%= path.startsWith('/admin/users') ? 'bg-primary/10 text-primary font-medium' : '' %> transition-all duration-200 rounded-lg hover:bg-primary/10">المستخدمين</a></li>
                <li><a href="/admin/content" class="<%= path.startsWith('/admin/content') ? 'bg-primary/10 text-primary font-medium' : '' %> transition-all duration-200 rounded-lg hover:bg-primary/10">المحتوى</a></li>
                <li><a href="/admin/statistics" class="<%= path.startsWith('/admin/statistics') ? 'bg-primary/10 text-primary font-medium' : '' %> transition-all duration-200 rounded-lg hover:bg-primary/10">الإحصائيات</a></li>
              </ul>
            </li>
          <% } %>
        <% } %>
      </ul>
    </div>
    
    <!-- User Section -->
    <div class="navbar-end">
      <!-- Language Switcher -->
      <div class="dropdown dropdown-end mx-2">
        <label tabindex="0" class="btn btn-ghost btn-circle transition-all duration-200 hover:bg-primary/10">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129" />
          </svg>
        </label>
        <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow-lg bg-base-100 rounded-xl w-52 transition-all duration-200">
          <li><a href="<%= `${req.path}?lang=ar` %>" class="<%= currentLocale === 'ar' ? 'bg-primary/10 text-primary font-medium' : '' %> transition-all duration-200 rounded-lg hover:bg-primary/10">العربية</a></li>
