<%- contentFor('title') %>
تحرير المنشور | راحة

<%- contentFor('body') %>
<div class="container mx-auto px-4 py-8">
  <div class="mb-6">
    <a href="/community/post/<%= post.id %>" class="text-primary hover:underline flex items-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      العودة إلى المنشور
    </a>
  </div>

  <div class="max-w-2xl mx-auto">
    <h1 class="text-2xl font-bold text-gray-800 mb-6">تحرير المنشور</h1>
    
    <% if (error) { %>
      <div class="bg-red-100 border-r-4 border-red-500 text-red-700 p-4 mb-6" role="alert">
        <p class="font-bold">خطأ!</p>
        <p><%= error %></p>
      </div>
    <% } %>
    
    <form action="/community/post/<%= post.id %>/edit" method="POST" class="bg-white shadow-md rounded-lg p-6">
      <div class="mb-4">
        <label for="title" class="block text-sm font-medium text-gray-700 mb-1">عنوان المنشور</label>
        <input type="text" id="title" name="title" value="<%= post.title %>" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-primary focus:border-primary" required>
      </div>
      
      <div class="mb-6">
        <label for="content" class="block text-sm font-medium text-gray-700 mb-1">محتوى المنشور</label>
        <textarea id="content" name="content" rows="10" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-primary focus:border-primary" required><%= post.content %></textarea>
      </div>
      
      <div class="flex justify-between">
        <a href="/community/post/<%= post.id %>" class="bg-gray-300 text-gray-700 px-4 py-2 rounded-md hover:bg-gray-400 transition duration-300">
          إلغاء
        </a>
        <button type="submit" class="bg-primary text-white px-4 py-2 rounded-md hover:bg-primary-dark transition duration-300">
          حفظ التغييرات
        </button>
      </div>
    </form>
  </div>
</div>
