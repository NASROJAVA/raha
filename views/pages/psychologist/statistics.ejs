<%- contentFor('title') %>
إحصائيات الضغط النفسي | راحة

<%- contentFor('head') %>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/chart.js@3.7.1/dist/chart.min.css">
<script src="https://cdn.jsdelivr.net/npm/chart.js@3.7.1/dist/chart.min.js"></script>

<%- contentFor('body') %>
<div class="container mx-auto px-4 py-8">
  <div class="flex flex-col lg:flex-row gap-8">
    <!-- Sidebar -->
    <%- include('../../partials/psychologist-sidebar', { currentPage: 'statistics' }) %>
    
    <!-- Main Content -->
    <div class="w-full lg:w-3/4">
      <div class="card bg-base-100 shadow-xl mb-8">
        <div class="card-body">
          <h1 class="card-title text-2xl font-bold">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 ml-2 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
            إحصائيات الضغط النفسي
          </h1>
          <p class="text-base-content/70 mb-6">تعرض هذه الصفحة إحصائيات مجهولة المصدر عن مستويات الضغط النفسي للمستخدمين. تساعدك هذه البيانات على فهم اتجاهات الصحة النفسية بشكل أفضل.</p>
          
          <div class="divider"></div>
          
          <!-- Stress Level Distribution -->
          <div class="mb-8">
            <h2 class="text-xl font-semibold mb-4 flex items-center">
              <div class="badge badge-primary mr-2">1</div>
              توزيع مستويات الضغط النفسي
            </h2>
            <div class="bg-base-200 p-6 rounded-box">
              <canvas id="stressLevelChart" width="400" height="200"></canvas>
            </div>
          </div>
          
          <!-- Weekly Trends -->
          <div class="mb-8">
            <h2 class="text-xl font-semibold mb-4 flex items-center">
              <div class="badge badge-primary mr-2">2</div>
              اتجاهات الضغط النفسي الأسبوعية
            </h2>
            <div class="bg-base-200 p-6 rounded-box">
              <canvas id="weeklyTrendChart" width="400" height="200"></canvas>
            </div>
          </div>
          
          <!-- Common Stressors -->
          <div class="mb-8">
            <h2 class="text-xl font-semibold mb-4 flex items-center">
              <div class="badge badge-primary mr-2">3</div>
              العوامل الشائعة المسببة للضغط النفسي
            </h2>
            <div class="overflow-x-auto">
              <table class="table table-zebra w-full">
                <thead>
                  <tr>
                    <th class="text-right">العامل</th>
                    <th class="text-right">النسبة المئوية</th>
                    <th class="text-right">المؤشر</th>
                  </tr>
                </thead>
                <tbody id="stressorsTable">
                  <% if (stressors && stressors.length > 0) { %>
                    <% stressors.forEach(stressor => { %>
                      <tr>
                        <td><%= stressor.name %></td>
                        <td><%= stressor.percentage %>%</td>
                        <td>
                          <progress class="progress progress-primary w-full" value="<%= stressor.percentage %>" max="100"></progress>
                        </td>
                      </tr>
                    <% }); %>
                  <% } else { %>
                    <tr>
                      <td colspan="3" class="text-center">
                        <div class="alert alert-info">
                          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                          <span>لا توجد بيانات متاحة</span>
                        </div>
                      </td>
                    </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
          
          <!-- Demographic Breakdown -->
          <div>
            <h2 class="text-xl font-semibold mb-4 flex items-center">
              <div class="badge badge-primary mr-2">4</div>
              تحليل الضغط النفسي حسب التركيبة السكانية
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <!-- Gender Distribution -->
              <div class="card bg-base-200">
                <div class="card-body">
                  <h3 class="card-title text-lg">حسب الجنس</h3>
                  <div class="h-60">
                    <canvas id="genderChart"></canvas>
                  </div>
                </div>
              </div>
              
              <!-- Marital Status Distribution -->
              <div class="card bg-base-200">
                <div class="card-body">
                  <h3 class="card-title text-lg">حسب الحالة الاجتماعية</h3>
                  <div class="h-60">
                    <canvas id="maritalStatusChart"></canvas>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- contentFor('scripts') %>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Set chart default font
    Chart.defaults.font.family = 'Cairo, sans-serif';
    Chart.defaults.color = '#6B7280';

    // Stress Level Distribution Chart
    const stressLevelCtx = document.getElementById('stressLevelChart').getContext('2d');
    const stressLevelChart = new Chart(stressLevelCtx, {
      type: 'bar',
      data: {
        labels: ['منخفض جداً (1-2)', 'منخفض (3-4)', 'متوسط (5-6)', 'مرتفع (7-8)', 'مرتفع جداً (9-10)'],
        datasets: [{
          label: 'عدد المستخدمين',
          data: <%- JSON.stringify(stressLevelDistribution || [10, 25, 40, 15, 5]) %>,
          backgroundColor: [
            'rgba(52, 211, 153, 0.6)', // success
            'rgba(96, 165, 250, 0.6)', // info
            'rgba(251, 191, 36, 0.6)', // warning
            'rgba(248, 113, 113, 0.6)', // error light
            'rgba(239, 68, 68, 0.6)'    // error
          ],
          borderColor: [
            'rgba(52, 211, 153, 1)',
            'rgba(96, 165, 250, 1)',
            'rgba(251, 191, 36, 1)',
            'rgba(248, 113, 113, 1)',
            'rgba(239, 68, 68, 1)'
          ],
          borderWidth: 1
        }]
      },
      options: {
        indexAxis: 'y',
        scales: {
          x: {
            beginAtZero: true,
            grid: {
              color: 'rgba(0, 0, 0, 0.05)'
            }
          },
          y: {
            grid: {
              display: false
            }
          }
        },
        plugins: {
          legend: {
            display: false
          }
        },
        responsive: true,
        maintainAspectRatio: false
      }
    });
    
    // Weekly Trend Chart
    const weeklyTrendCtx = document.getElementById('weeklyTrendChart').getContext('2d');
    const weeklyTrendChart = new Chart(weeklyTrendCtx, {
      type: 'line',
      data: {
        labels: ['الأحد', 'الإثنين', 'الثلاثاء', 'الأربعاء', 'الخميس', 'الجمعة', 'السبت'],
        datasets: [{
          label: 'متوسط مستوى الضغط النفسي',
          data: <%- JSON.stringify(weeklyTrend || [5.2, 6.1, 5.8, 5.5, 5.9, 4.7, 4.3]) %>,
          fill: true,
          backgroundColor: 'rgba(79, 70, 229, 0.2)',
          borderColor: 'rgba(79, 70, 229, 1)',
          borderWidth: 2,
          tension: 0.3,
          pointBackgroundColor: '#ffffff',
          pointBorderColor: 'rgba(79, 70, 229, 1)',
          pointBorderWidth: 2,
          pointRadius: 4
        }]
      },
      options: {
        scales: {
          y: {
            beginAtZero: true,
            max: 10,
            grid: {
              color: 'rgba(0, 0, 0, 0.05)'
            }
          },
          x: {
            grid: {
              display: false
            }
          }
        },
        responsive: true,
        maintainAspectRatio: false
      }
    });
    
    // Gender Chart
    const genderCtx = document.getElementById('genderChart').getContext('2d');
    const genderData = <%- JSON.stringify(genderDistribution || {male: 60, female: 40}) %>;
    const genderChart = new Chart(genderCtx, {
      type: 'doughnut',
      data: {
        labels: ['ذكر', 'أنثى'],
        datasets: [{
          data: [genderData.male, genderData.female],
          backgroundColor: [
            'rgba(79, 70, 229, 0.6)', // primary
            'rgba(236, 72, 153, 0.6)'  // pink
          ],
          borderColor: [
            'rgba(79, 70, 229, 1)',
            'rgba(236, 72, 153, 1)'
          ],
          borderWidth: 1
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: {
            position: 'bottom'
          }
        }
      }
    });
    
    // Marital Status Chart
    const maritalCtx = document.getElementById('maritalStatusChart').getContext('2d');
    const maritalData = <%- JSON.stringify(maritalDistribution || {
      single: 45,
      married: 35,
      divorced: 15,
      widowed: 5
    }) %>;
    const maritalChart = new Chart(maritalCtx, {
      type: 'doughnut',
      data: {
        labels: ['أعزب/عزباء', 'متزوج/ة', 'مطلق/ة', 'أرمل/ة'],
        datasets: [{
          data: [maritalData.single, maritalData.married, maritalData.divorced, maritalData.widowed],
          backgroundColor: [
            'rgba(79, 70, 229, 0.6)', // primary
            'rgba(52, 211, 153, 0.6)', // success
            'rgba(251, 191, 36, 0.6)', // warning
            'rgba(239, 68, 68, 0.6)'   // error
          ],
          borderColor: [
            'rgba(79, 70, 229, 1)',
            'rgba(52, 211, 153, 1)',
            'rgba(251, 191, 36, 1)',
            'rgba(239, 68, 68, 1)'
          ],
          borderWidth: 1
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: {
            position: 'bottom'
          }
        }
      }
    });
  });
</script>
