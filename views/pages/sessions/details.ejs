<%- contentFor('head') %>
<!-- Additional head content for session details page -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">

<%- contentFor('body') %>
<div class="bg-gray-50 min-h-screen">
    <div class="container mx-auto px-4 py-6 md:py-8">
        <!-- Breadcrumbs Navigation -->
        <div class="flex flex-wrap items-center mb-4 text-sm animate__animated animate__fadeIn animate__faster">
            <a href="/" class="text-gray-500 hover:text-primary transition-colors duration-300">
                <i class="fas fa-home"></i>
                <span class="mx-2">/</span>
            </a>
            <a href="/sessions" class="text-gray-500 hover:text-primary transition-colors duration-300">
                <span><%- __('Sessions') %></span>
                <span class="mx-2">/</span>
            </a>
            <span class="text-gray-600 font-medium truncate max-w-[200px] md:max-w-xs"><%= session.title %></span>
        </div>
        
        <!-- Back Button -->
        <div class="mb-6 animate__animated animate__fadeInUp animate__faster">
            <a href="/sessions" class="group inline-flex items-center text-primary hover:text-primary-focus transition-colors duration-300 mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1 group-hover:translate-x-1 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
                <%- __('Back to Sessions') %>
            </a>

            <!-- Session Status Banner -->
            <% 
            let statusClass = '';
            let statusBg = '';
            let statusIcon = '';
            let statusText = '';
            let statusGradient = '';
            let statusIconClass = '';
            let accentColor = '';
            
            if (session.status === 'scheduled') {
                statusClass = 'bg-blue-50 border-blue-200 text-blue-800';
                statusBg = 'bg-blue-100';
                statusGradient = 'from-blue-500/10 to-blue-500/20';
                statusIconClass = 'text-blue-600';
                accentColor = 'blue';
                statusIcon = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />';
                statusText = __('Scheduled');
            } else if (session.status === 'active') {
                statusClass = 'bg-green-50 border-green-200 text-green-800';
                statusBg = 'bg-green-100';
                statusGradient = 'from-green-500/10 to-green-500/20';
                statusIconClass = 'text-green-600';
                accentColor = 'green';
                statusIcon = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />';
                statusText = __('Active Now');
            } else if (session.status === 'completed') {
                statusClass = 'bg-green-50 border-green-200 text-green-800';
                statusBg = 'bg-green-100';
                statusGradient = 'from-green-500/10 to-green-500/20';
                statusIconClass = 'text-green-600';
                accentColor = 'green';
                statusIcon = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />';
                statusText = __('Completed');
            } else if (session.status === 'cancelled') {
                statusClass = 'bg-red-50 border-red-200 text-red-800';
                statusBg = 'bg-red-100';
                statusGradient = 'from-red-500/10 to-red-500/20';
                statusIconClass = 'text-red-600';
                accentColor = 'red';
                statusIcon = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />';
                statusText = __('Cancelled');
            } else if (session.status === 'missed') {
                statusClass = 'bg-yellow-50 border-yellow-200 text-yellow-800';
                statusBg = 'bg-yellow-100';
                statusGradient = 'from-yellow-500/10 to-yellow-500/20';
                statusIconClass = 'text-yellow-600';
                accentColor = 'yellow';
                statusIcon = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />';
                statusText = __('Missed');
            }
            %>

            <div class="relative bg-gradient-to-r <%= statusGradient %> p-6 rounded-2xl mb-8 animate__animated animate__fadeInUp animate__delay-1s shadow-sm overflow-hidden">
                <!-- Decorative elements based on status color -->
                <div class="absolute top-0 right-0 w-40 h-40 bg-<%= accentColor %>-500/10 rounded-full -mr-20 -mt-20"></div>
                <div class="absolute bottom-0 left-0 w-32 h-32 bg-<%= accentColor %>-500/10 rounded-full -ml-16 -mb-16"></div>
                
                <div class="flex flex-col md:flex-row md:items-center w-full relative z-10">
                    <div class="flex items-start md:items-center mb-4 md:mb-0 md:mr-6">
                        <div class="mr-4 p-3 bg-white rounded-full <%= statusIconClass %> shadow-sm transition-all duration-300 hover:shadow-md hover:scale-105">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <%- statusIcon %>
                            </svg>
                        </div>
                        
                        <div>
                            <h2 class="font-bold text-gray-800 text-xl mb-1"><%= session.title %></h2>
                            <div class="inline-flex items-center px-3 py-1 rounded-full bg-<%= accentColor %>-100 text-<%= accentColor %>-800 text-sm font-medium">
                                <%= statusText %>
                            </div>
                        </div>
                    </div>
                    
                    <div class="md:border-r border-<%= accentColor %>-300/30 md:h-16 md:mx-5 hidden md:block"></div>
                    
                    <div class="bg-white/90 backdrop-blur-sm rounded-xl p-4 flex-grow shadow-sm border border-<%= accentColor %>-100">
                        <p class="text-gray-700 flex items-center">
                            <% 
                            // Determine secondary status message based on status
                            if (session.status === 'scheduled') { 
                                // Check if it's a future session
                                try {
                                    const sessionDate = new Date(`${session.session_date} ${session.start_time || session.startTime}`);
                                    const now = new Date();
                                    const diffTime = sessionDate - now;
                                    const diffDays = Math.floor(diffTime / (1000 * 60 * 60 * 24));
                                    const diffHours = Math.floor((diffTime % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                                    
                                    if (diffDays > 0) {
                                        %><i class="far fa-clock mr-2"></i><%- __('Starting in') %> <span class="font-medium"><%= diffDays %> <%- __('days') %></span><% 
                                    } else if (diffHours > 0) { 
                                        %><i class="far fa-clock mr-2"></i><%- __('Starting in') %> <span class="font-medium"><%= diffHours %> <%- __('hours') %></span><% 
                                    } else { 
                                        %><i class="far fa-clock mr-2"></i><span class="font-medium"><%- __('Starting soon') %></span><% 
                                    }
                                } catch (e) {
                                    %><i class="far fa-check-circle mr-2"></i><%- __('Session has been scheduled successfully') %><% 
                                }
                            } else if (session.status === 'completed') { %>
                                <i class="far fa-check-circle mr-2"></i><%- __('Session completed successfully') %>
                            <% } else if (session.status === 'cancelled') { %>
                                <i class="far fa-times-circle mr-2"></i>
                                <% if (session.cancel_reason) { %>
                                    <span><%- __('Reason') %>: <span class="font-medium"><%= session.cancel_reason %></span></span>
                                <% } else { %>
                                    <%- __('Session was cancelled') %>
                                <% } %>
                            <% } else if (session.status === 'missed') { %>
                                <i class="far fa-calendar-times mr-2"></i><%- __('The session time passed without attendance') %>
                            <% } %>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Main Session Info -->
            <div class="lg:col-span-2">
                <div class="bg-white rounded-2xl shadow-md overflow-hidden animate__animated animate__fadeInUp animate__delay-2s">
                    <div class="relative">
                        <!-- Session Type Badge -->
                        <% 
                        let typeGradient = '';
                        let typeIcon = '';
                        let typeName = '';
                        
                        if (session.type === 'video') {
                            typeGradient = 'from-blue-500/10 to-blue-500/20'; 
                            typeIcon = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />';
                            typeName = __('Video Session');
                        } else if (session.type === 'in-person') {
                            typeGradient = 'from-purple-500/10 to-purple-500/20';
                            typeIcon = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />';
                            typeName = __('In-person Session');
                        } else {
                            typeGradient = 'from-gray-500/10 to-gray-500/20';
                            typeIcon = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />';
                            typeName = __('Chat Session');
                        }
                        %>
                        <div class="bg-gradient-to-r <%= typeGradient %> px-6 py-5">
                            <div class="flex items-center justify-between">
                                <h1 class="text-2xl md:text-3xl font-bold text-gray-800"><%= session.title %></h1>
                                
                                <div class="flex items-center bg-white/80 px-3 py-1.5 rounded-full text-sm font-medium shadow-sm">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <%- typeIcon %>
                                    </svg>
                                    <%= typeName %>
                                </div>
                            </div>
                        </div>
                        
                        <div class="p-6 pb-0">
                            <!-- Psychologist Info -->
                            <div class="bg-white overflow-hidden rounded-xl shadow-md border border-gray-100 transition-all duration-300 hover:shadow-lg">
                                <div class="relative p-6">
                                    <div class="absolute top-0 right-0 bg-gradient-to-l from-primary/10 to-transparent w-2/3 h-12 rounded-bl-full opacity-70"></div>
                                    
                                    <h3 class="flex items-center text-xl font-bold text-gray-800 mb-6 relative">
                                        <span class="inline-block w-8 h-8 bg-primary/10 rounded-full flex items-center justify-center mr-3 text-primary">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                            </svg>
                                        </span>
                                        <%- __('Psychologist Information') %>
                                    </h3>
                                    
                                    <div class="flex flex-col md:flex-row items-center md:items-start space-y-5 md:space-y-0 md:space-x-6">
                                        <div class="flex-shrink-0 relative">
                                            <div class="relative group">
                                                <div class="absolute inset-0 bg-gradient-to-br from-primary/20 to-blue-400/30 rounded-full blur-md transform group-hover:scale-110 transition-all duration-300 opacity-70"></div>
                                                <img src="<%= session.psychologist.avatar || '/images/default-avatar.png' %>" alt="<%= session.psychologist.name %>" class="relative w-28 h-28 object-cover rounded-full border-4 border-white shadow-md group-hover:scale-105 transition-all duration-300">
                                                <div class="absolute bottom-1 right-1 w-6 h-6 rounded-full <%= session.psychologist.is_online ? 'bg-green-500' : 'bg-gray-300' %> border-2 border-white flex items-center justify-center">
                                                    <% if (session.psychologist.is_online) { %>
                                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                                    </svg>
                                                    <% } %>
                                                </div>
                                            </div>
                                            <span class="absolute top-0 left-0 transform -translate-y-3 -translate-x-1 px-3 py-1 bg-primary text-white text-xs font-medium rounded-full shadow-sm">
                                                <%= session.psychologist.is_online ? __('Online') : __('Offline') %>
                                            </span>
                                        </div>
                                        
                                        <div class="flex-grow text-center md:text-left">
                                            <h4 class="text-xl font-bold text-gray-800 mb-1"><%= session.psychologist.name %></h4>
                                            
                                            <div class="mt-4 text-gray-700 space-y-3">
                                                <div class="flex flex-wrap justify-center md:justify-start gap-y-3">
                                                    <% if (session.psychologist.specialties && session.psychologist.specialties.length > 0) { %>
                                                        <div class="w-full flex items-start">
                                                            <span class="inline-flex items-center min-w-[120px] text-primary-dark font-medium">
                                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                                                                </svg>
                                                                <%- __('Specialties') %>:
                                                            </span>
                                                            <span>
                                                            <% 
                                                            let specialties = [];
                                                            if (Array.isArray(session.psychologist.specialties)) {
                                                                specialties = session.psychologist.specialties;
                                                            } else if (typeof session.psychologist.specialties === 'string') {
                                                                try {
                                                                    specialties = JSON.parse(session.psychologist.specialties);
                                                                } catch (e) {
                                                                    specialties = [session.psychologist.specialties];
                                                                }
                                                            }
                                                            %>
                                                            <div class="flex flex-wrap gap-2">
                                                                <% specialties.forEach(function(specialty) { %>
                                                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-primary-light text-primary-dark">
                                                                        <%= specialty %>
                                                                    </span>
                                                                <% }); %>
                                                            </div>
                                                            </span>
                                                        </div>
                                                    <% } %>
                                                    
                                                    <% if (session.psychologist.languages && session.psychologist.languages.length > 0) { %>
                                                        <div class="w-full flex items-start">
                                                            <span class="inline-flex items-center min-w-[120px] text-primary-dark font-medium">
                                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129" />
                                                                </svg>
                                                                <%- __('Languages') %>:
                                                            </span>
                                                            <span>
                                                            <% 
                                                            let languages = [];
                                                            if (Array.isArray(session.psychologist.languages)) {
                                                                languages = session.psychologist.languages;
                                                            } else if (typeof session.psychologist.languages === 'string') {
                                                                try {
                                                                    languages = JSON.parse(session.psychologist.languages);
                                                                } catch (e) {
                                                                    languages = [session.psychologist.languages];
                                                                }
                                                            }
                                                            %>
                                                            <div class="flex flex-wrap gap-2">
                                                                <% languages.forEach(function(language) { %>
                                                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-50 text-blue-600">
                                                                        <%= language %>
                                                                    </span>
                                                                <% }); %>
                                                            </div>
                                                            </span>
                                                        </div>
                                                    <% } %>
                                                    
                                                    <% if (session.psychologist.years_experience) { %>
                                                        <div class="w-full flex items-center">
                                                            <span class="inline-flex items-center min-w-[120px] text-primary-dark font-medium">
                                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                                                </svg>
                                                                <%- __('Experience') %>:
                                                            </span>
                                                            <span class="font-medium"><%= session.psychologist.years_experience %> <%- __('years') %></span>
                                                        </div>
                                                    <% } %>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <% if (session.psychologist.bio) { %>
                                        <div class="mt-7 pt-6 border-t border-gray-100">
                                            <h5 class="flex items-center text-gray-800 font-semibold mb-3">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                                </svg>
                                                <%- __('About Me') %>
                                            </h5>
                                            <div class="text-gray-700 prose max-w-none leading-relaxed">
                                                <%= session.psychologist.bio %>
                                            </div>
                                        </div>
                                    <% } %>
                                    
                                    <div class="mt-7 pt-6 border-t border-gray-100">
                                        <a href="/psychologists/<%= session.psychologist.id %>" class="group inline-flex items-center bg-gradient-to-r from-primary-light to-primary-light/50 text-primary-dark px-4 py-2 rounded-lg transition-all duration-300 hover:from-primary-light/70 hover:to-primary-light/30 hover:shadow-sm">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 group-hover:animate-pulse" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                            </svg>
                                            <%- __('View Full Profile') %>
                                        </a>
                                    </div>
                                </div>
                            </div>

                            <!-- Session Description and Notes -->
                            <div class="mt-6">
                                <h3 class="flex items-center text-lg font-bold text-gray-800 mb-4">
                                    <span class="inline-block w-7 h-7 bg-primary/10 rounded-full flex items-center justify-center mr-2 text-primary">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                        </svg>
                                    </span>
                                    <%- __('Session Description') %>
                                </h3>
                                <div class="text-gray-700 prose max-w-none bg-gradient-to-r from-gray-50 to-white p-5 rounded-xl border-r-4 border-primary/20 shadow-sm">
                                    <%= session.description || __('No description provided') %>
                                </div>
                            </div>

                            <% if (session.notes) { %>
                                <div class="mt-8">
                                    <h3 class="flex items-center text-lg font-bold text-gray-800 mb-4">
                                        <span class="inline-block w-7 h-7 bg-primary/10 rounded-full flex items-center justify-center mr-2 text-primary">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                            </svg>
                                        </span>
                                        <%- __('Session Notes') %>
                                    </h3>
                                    <div class="text-gray-700 prose max-w-none bg-gradient-to-r from-blue-50 to-blue-50/30 p-5 rounded-xl border-r-4 border-blue-200 shadow-sm">
                                        <%= session.notes %>
                                    </div>
                                </div>
                            <% } %>

                            <!-- Action Buttons -->
                            <div class="mt-10 pt-6 border-t border-gray-200">
                                <div class="flex flex-wrap gap-4 items-center justify-between">
                                    <div class="flex flex-wrap gap-3">
                                        <% 
                                        // Calculate if the session is in the future
                                        let isSessionInFuture = false;
                                        try {
                                            const sessionDate = new Date(`${session.session_date} ${session.start_time || session.startTime}`);
                                            const now = new Date();
                                            isSessionInFuture = sessionDate > now;
                                        } catch (e) {
                                            console.error('Error comparing dates:', e);
                                        }
                                        %>
                                        
                                        <% if (session.status === 'scheduled' || session.status === 'active') { %>
                                            <% if (session.type === 'video') { %>
                                                <a href="/sessions/<%= session.id %>/join" class="flex items-center bg-gradient-to-r from-green-600 to-green-500 hover:from-green-700 hover:to-green-600 text-white px-6 py-3 rounded-xl transition-all duration-300 shadow-md transform hover:scale-105">
                                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
                                                    </svg>
                                                    <%- __('Join Video Session') %>
                                                </a>
                                            <% } %>
                                            
                                            <% if (isSessionInFuture) { %>
                                                <button id="cancelSessionBtn" class="flex items-center border-2 border-red-500 text-red-500 hover:bg-red-50 px-5 py-2.5 rounded-xl transition-all duration-300 font-medium">
                                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                                    </svg>
                                                    <%- __('Cancel Session') %>
                                                </button>
                                            <% } %>
                                        <% } else if (session.status === 'completed' && !session.feedback) { %>
                                            <a href="/sessions/<%= session.id %>/feedback" class="flex items-center bg-gradient-to-r from-primary to-primary-focus hover:from-primary-focus hover:to-primary-dark text-white px-6 py-3 rounded-xl transition-all duration-300 shadow-md transform hover:scale-105">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                                                </svg>
                                                <%- __('Leave Feedback') %>
                                            </a>
                                        <% } %>
                                        
                                        <% if (session.status === 'scheduled' || session.status === 'active') { %>
                                            <a href="/support/conversation/<%= session.psychologist.id %>" class="flex items-center bg-blue-50 border border-blue-100 text-blue-600 hover:bg-blue-100 px-5 py-2.5 rounded-xl transition-all duration-300 font-medium">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                                                </svg>
                                                <%- __('Message Psychologist') %>
                                            </a>
                                        <% } %>
                                    </div>
                                    
                                    <a href="/sessions" class="flex items-center text-gray-600 hover:text-primary-focus hover:bg-gray-50 px-4 py-2 rounded-lg transition-all duration-300 group">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 group-hover:translate-x-1 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16" />
                                        </svg>
                                        <%- __('View All Sessions') %>
                                    </a>
                                </div>
                            </div>
                    </div>
                </div>
            </div>
            
            <!-- Sidebar with Session Details -->
            <div class="lg:col-span-1">
                <div class="bg-white rounded-xl shadow-md overflow-hidden sticky top-6">
                    <div class="p-5 bg-primary-50 border-b border-primary-100">
                        <h3 class="text-lg font-semibold text-primary"><%- __('Session Details') %></h3>
                    </div>
                    
                    <div class="p-5 space-y-4">
                        <!-- Date -->
                        <div class="flex items-start">
                            <div class="bg-primary-50 p-2 rounded-md mr-3">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                </svg>
                            </div>
                            <div>
                                <div class="text-sm text-gray-500 mb-1"><%- __('Date') %></div>
                                <div class="text-gray-800 font-medium">
                                    <% try { %>
                                        <%= new Date(session.session_date).toLocaleDateString('ar-DZ', { year: 'numeric', month: 'long', day: 'numeric' }) %>
                                    <% } catch (e) { %>
                                        <%= session.session_date %>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Time -->
                        <div class="flex items-start">
                            <div class="bg-primary-50 p-2 rounded-md mr-3">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                            </div>
                            <div>
                                <div class="text-sm text-gray-500 mb-1"><%- __('Time') %></div>
                                <div class="text-gray-800 font-medium">
                                    <% 
                                    // Format time to be more readable using the system's local time
                                    function formatTime(time) {
                                        if (!time) return '';
                                        
                                        // If time already has AM/PM indicators, return as is
                                        if (time.includes('صباحاً') || time.includes('مساءً')) {
                                            return time;
                                        }
                                        
                                        // Parse hours and minutes from time format
                                        const parts = time.split(':');
                                        let hours = parseInt(parts[0]);
                                        const minutes = parts.length > 1 ? parts[1].padStart(2, '0') : '00';
                                        
                                        // The times in the database are already in Algeria time (UTC+1),
                                        // so there's no need to add an extra hour for timezone conversion
                                        
                                        // Determine period and convert to 12-hour format
                                        const period = hours >= 12 ? 'مساءً' : 'صباحاً';
                                        hours = hours % 12 || 12; // Convert 0 to 12 for 12 AM
                                        
                                        return `${hours}:${minutes} ${period}`;
                                    }
                                    %>
                                    <%= formatTime(session.startTime || session.start_time) %> - <%= formatTime(session.endTime || session.end_time) %>
                                </div>
                            </div>
                        </div>
                        
                        <% if (session.location && session.type === 'in-person') { %>
                            <!-- Location for in-person sessions -->
                            <div class="flex items-start">
                                <div class="bg-primary-50 p-2 rounded-md mr-3">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                                    </svg>
                                </div>
                                <div>
                                    <div class="text-sm text-gray-500 mb-1"><%- __('Location') %></div>
                                    <div class="text-gray-800 font-medium">
                                        <%= session.location %>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                        
                        <!-- Duration -->
                        <div class="flex items-start">
                            <div class="bg-primary-50 p-2 rounded-md mr-3">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                            </div>
                            <div>
                                <div class="text-sm text-gray-500 mb-1"><%- __('Duration') %></div>
                                <div class="text-gray-800 font-medium">
                                    <% 
                                    let durationText = '';
                                    try {
                                        // Calculate duration from start and end times
                                        const startTime = session.startTime || session.start_time;
                                        const endTime = session.endTime || session.end_time;
                                        
                                        if (startTime && endTime) {
                                            const startParts = startTime.split(':');
                                            const endParts = endTime.split(':');
                                            
                                            const startMinutes = parseInt(startParts[0]) * 60 + parseInt(startParts[1]);
                                            const endMinutes = parseInt(endParts[0]) * 60 + parseInt(endParts[1]);
                                            
                                            const durationMinutes = endMinutes - startMinutes;
                                            
                                            if (durationMinutes > 0) {
                                                durationText = `${durationMinutes} ` + __('minutes');
                                            } else {
                                                durationText = session.duration_minutes ? `${session.duration_minutes} ` + __('minutes') : '60 ' + __('minutes');
                                            }
                                        } else {
                                            durationText = session.duration_minutes ? `${session.duration_minutes} ` + __('minutes') : '60 ' + __('minutes');
                                        }
                                    } catch (e) {
                                        durationText = '60 ' + __('minutes');
                                    }
                                    %>
                                    <%= durationText %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Back to Top Button -->
<button id="backToTop" class="fixed bottom-8 right-8 bg-primary hover:bg-primary-focus text-white rounded-full p-3 shadow-lg transform transition-all duration-300 opacity-0 translate-y-10 z-20">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" />
    </svg>
</button>

<% if (session.status === 'scheduled') { %>
    <div id="cancelModal" class="fixed inset-0 bg-black/60 backdrop-blur-sm z-50 flex items-center justify-center hidden animate__animated animate__fadeIn">
        <div class="bg-white rounded-xl p-0 w-full max-w-md mx-4 shadow-xl overflow-hidden transform transition-all duration-300 animate__animated animate__zoomIn animate__faster">
            <!-- Modal Header with accent color -->
            <div class="bg-gradient-to-r from-red-600 to-red-500 px-6 py-4 flex items-center">
                <div class="bg-white/20 p-2 rounded-full mr-3">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                    </svg>
                </div>
                <h3 class="text-xl font-bold text-white"><%- __('Cancel Session') %></h3>
            </div>
            
            <div class="p-6">
                <p class="text-gray-700 mb-6"><%- __('Are you sure you want to cancel this session? This action cannot be undone.') %></p>
                
                <form action="/sessions/<%= session.id %>/cancel" method="POST">
                    <div class="mb-5">
                        <label for="cancelReason" class="flex items-center text-sm font-medium text-gray-700 mb-2">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                            </svg>
                            <%- __('Reason for cancellation (optional)') %>
                        </label>
                        <div class="relative">
                            <textarea id="cancelReason" name="reason" rows="3" class="w-full px-4 py-3 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all duration-300 text-gray-700"></textarea>
                            <div class="absolute inset-0 rounded-lg pointer-events-none border border-red-100 border-opacity-0 focus-within:border-opacity-100 transition-opacity duration-300"></div>
                        </div>
                    </div>
                    
                    <div class="flex justify-end space-x-3 pt-2">
                        <button type="button" id="cancelModalClose" class="px-5 py-2.5 border-2 border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition-all duration-300 font-medium flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                            </svg>
                            <%- __('Go Back') %>
                        </button>
                        <button type="submit" class="px-5 py-2.5 bg-gradient-to-r from-red-600 to-red-500 text-white rounded-lg hover:from-red-700 hover:to-red-600 transition-all duration-300 transform hover:scale-105 font-medium flex items-center shadow-md">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                            </svg>
                            <%- __('Confirm Cancellation') %>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const cancelBtn = document.getElementById('cancelSessionBtn');
            const cancelModal = document.getElementById('cancelModal');
            const cancelModalClose = document.getElementById('cancelModalClose');
            const modalContent = cancelModal.querySelector('.bg-white');
            
            cancelBtn.addEventListener('click', function() {
                // Show the modal background with fade effect
                cancelModal.classList.remove('hidden');
                cancelModal.classList.add('animate__fadeIn');
                
                // Show the modal content with zoom effect
                modalContent.classList.add('animate__zoomIn');
                modalContent.classList.remove('animate__zoomOut');
            });
            
            cancelModalClose.addEventListener('click', function() {
                // Hide modal content first with zoom out effect
                modalContent.classList.remove('animate__zoomIn');
                modalContent.classList.add('animate__zoomOut');
                
                // Hide the modal background with fade out effect after a delay
                setTimeout(function() {
                    cancelModal.classList.remove('animate__fadeIn');
                    cancelModal.classList.add('animate__fadeOut');
                    
                    // Hide the modal after animations complete
                    setTimeout(function() {
                        cancelModal.classList.add('hidden');
                        cancelModal.classList.remove('animate__fadeOut');
                        modalContent.classList.remove('animate__zoomOut');
                    }, 300); 
                }, 200);
            });
            
            // Close the modal when clicking outside of it
            cancelModal.addEventListener('click', function(e) {
                if (e.target === cancelModal) {
                    cancelModalClose.click();
                }
            });
        });
    </script>
<% } %>

<!-- Back to Top Button Script -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const backToTopButton = document.getElementById('backToTop');
        
        // Show/hide button based on scroll position
        window.addEventListener('scroll', function() {
            if (window.pageYOffset > 300) { // Show after scrolling down 300px
                backToTopButton.classList.remove('opacity-0', 'translate-y-10');
                backToTopButton.classList.add('opacity-100', 'translate-y-0');
            } else {
                backToTopButton.classList.remove('opacity-100', 'translate-y-0');
                backToTopButton.classList.add('opacity-0', 'translate-y-10');
            }
        });
        
        // Scroll to top when clicked
        backToTopButton.addEventListener('click', function() {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        });
        
        // Initial check in case page is already scrolled on load
        if (window.pageYOffset > 300) {
            backToTopButton.classList.remove('opacity-0', 'translate-y-10');
            backToTopButton.classList.add('opacity-100', 'translate-y-0');
        }
    });
</script>
